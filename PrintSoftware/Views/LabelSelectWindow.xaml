<Window x:Class="PrintSoftware.Views.LabelSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PrintSoftware.Views"
        mc:Ignorable="d"
        Title="LabelSelectWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select a Label" FontSize="20" Margin="0 0 0 10" />

            <ListBox x:Name="LabelList" Height="200" />

            <Button Content="Open Label"
                    Margin="0 10 0 0"
                    Width="120"
                    Command="{Binding OpenSelectedLabel}" />
        </StackPanel>
    </Grid>
</Window>
