<ui:FluentWindow x:Class="PrintSoftware.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:PrintSoftware.ViewModels"
        mc:Ignorable="d"
        Title="Settings" 
        Height="500" Width="800"
        ResizeMode="CanResize"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        ExtendsContentIntoTitleBar="True">

    <ui:FluentWindow.DataContext>
        <vm:SettingsViewModel />
    </ui:FluentWindow.DataContext>

    <DockPanel LastChildFill="True">
        <!-- HEADER -->
        <DockPanel DockPanel.Dock="Top" Background="#008896" Height="50" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <TextBlock Text="Settings"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                       FontWeight="Bold"
                       Foreground="White"
                       FontSize="25"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button Content="―" Width="35" Height="30" Click="MinimizeButton_Click"/>
                <Button Content="□" Width="35" Height="30" Click="MaximizeButton_Click"/>
                <Button Content="✕" Width="35" Height="30" Click="CloseButton_Click"/>
            </StackPanel>
        </DockPanel>

        <Grid>
            <!-- SETTINGS -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,14,0,0" Height="383">
                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <TextBlock Text="Density:" Width="90" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{Binding Density, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <TextBlock Text="Speed:" Width="90" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{Binding Speed, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <TextBlock Text="Direction:" Margin="0,0,40,0"/>
                    <ComboBox Width="150" SelectedItem="{Binding Direction}">
                        <ComboBoxItem Content="Default"/>
                        <ComboBoxItem Content="Reversed"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <TextBlock Text="Gap:" Width="90" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{Binding Gap, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <TextBlock Text="Offset:" Width="90" VerticalAlignment="Center"/>
                    <TextBox Width="150" Text="{Binding Offset, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <CheckBox Content="Enable Cutter" IsChecked="{Binding CutterEnabled}"/>
                </StackPanel>

                <StackPanel Margin="10">
                    <CheckBox Content="Enable Tear" IsChecked="{Binding TearEnabled}"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Get Printers" 
                    Width="90" Height="35" 
                    HorizontalAlignment="Right" 
                    Margin="0,0,150,10" 
                    VerticalAlignment="Bottom" 
                    Foreground="White"
                    Background="#008896"
                    Command="{Binding GetPrintersCommand}"/>

            <Button Content="Save" 
                    Width="90" Height="35" 
                    HorizontalAlignment="Right" 
                    Margin="10,10,10,10" 
                    VerticalAlignment="Bottom" 
                    Foreground="White"
                    Background="#008896"
                    Command="{Binding SaveSettingsCommand}"/>
        </Grid>
    </DockPanel>
</ui:FluentWindow>
