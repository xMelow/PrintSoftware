<Window x:Class="SimpleProject.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleProject"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="GridStyle1" TargetType="{x:Type Grid}"/>
    </Window.Resources>
    <Grid Style="{DynamicResource GridStyle1}">
        <TextBlock FontSize="20" Margin="360,10,-360,-10" FontWeight="Bold">Settings</TextBlock>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,78,0,0">
            <StackPanel Orientation="Horizontal" Margin="10,10">
                <TextBlock Text="Density:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="DensityBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10">
                <TextBlock Text="Speed:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="SpeedBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10">
                <TextBlock Text="Direction:" Margin="0,0,40,0"/>
                <ComboBox x:Name="DirectionComboBox" Width="80" SelectedIndex="0">
                    <ComboBoxItem Content="Default"/>
                    <ComboBoxItem Content="Reversed"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10">
                <TextBlock Text="Gap:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="GapBox" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10">
                <TextBlock Text="Offset:" Width="90" VerticalAlignment="Center"/>
                <TextBox x:Name="OffsetBox" Width="150"/>
            </StackPanel>

            <StackPanel Margin="10">
                <CheckBox x:Name="CutterCheckBox" Content="Enable Cutter" IsChecked="False"/>
            </StackPanel>

            <StackPanel Margin="10">
                <CheckBox x:Name="TearCheckBox" Content="Enable Tear" IsChecked="False"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="SaveButton" Content="Save" Width="90" Height="35" HorizontalAlignment="Right" Margin="10,10,10,10" Click="SaveSettings_Click" VerticalAlignment="Bottom" BorderBrush="Black" Background="#FF3FF384"/>
    </Grid>
</Window>
