<Window x:Class="SimpleProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleProject"
        mc:Ignorable="d"
        Title="Print Code Preview" Height="500" Width="1500">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="119*" />
            <ColumnDefinition Width="173*" />
        </Grid.ColumnDefinitions>

        <TextBlock FontSize="25" Grid.Column="1" Margin="20,0,666,356" FontWeight="Bold"> Label Printing</TextBlock>

        <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,50,0,0" Width="317" Height="260">
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Title:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="TitleTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Name:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="NameTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Phone number:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="PhoneNumberTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Email:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="EmailTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Company:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="CompanyTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="QR Code:" Width="120" VerticalAlignment="Center" FontSize="16"/>
                <TextBox x:Name="QRTextBox" Width="150" LostFocus="Input_TextChanged" FontSize="16"/>
            </StackPanel>
        </StackPanel>

        <Border BorderBrush="Gray" BorderThickness="1" Grid.Column="1" Margin="433,64,10,134">
            <Viewbox Stretch="Uniform" Margin="1,0,1,0">
                <Image x:Name="LabelPreviewImage" Stretch="None" Margin="0,-4,0,4"/>
            </Viewbox>
        </Border>

        <Grid Grid.Column="1" Margin="184,371,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="419*"/>
                <ColumnDefinition Width="71*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Content="Import Excel" Click="ImportExcelFile" Margin="-395,14,884,3" Grid.Row="1" />
            <DataGrid x:Name="ExcelGrid" AutoGenerateColumns="True" Margin="-395,-320,395,90"/>

            <Button x:Name="PrintButton" Content="PRINT" Width="75" Height="35" HorizontalAlignment="Right" Margin="0,10,0,0" Grid.Row="1" Click="PrintButton_Click" Background="#FF35EA93" BorderBrush="#FF0B0C0C" Grid.ColumnSpan="2"/>
            <Button x:Name="SettingsPage" Content="Settings" Width="70" HorizontalAlignment="Left" Margin="-776,12,0,11" Click="ViewSettingsPage_Click" Background="#FF35EA93" BorderBrush="#FF0B0C0C" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
